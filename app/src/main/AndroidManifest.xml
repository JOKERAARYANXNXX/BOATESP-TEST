<?xml version='1.0' encoding='utf-8'?>
<manifest
    xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.boat.esp">

    <!-- ACTION_MANAGE_OVERLAY_PERMISSION -->
    <uses-permission android:name="android.permission.ACTION_MANAGE_OVERLAY_PERMISSION"/>

    <!-- draw over other apps -->
    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW"/>

    <!-- ACCESS_SUPERUSER -->
    <uses-permission android:name="ACCESS_SUPERUSER"/>

    <!-- full network access -->
    <uses-permission android:name="android.permission.INTERNET"/>

    <!-- view network connections -->
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>

    <!-- modify or delete the contents of your SD card -->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>

    <application
        android:allowBackup="true"
        android:icon="@drawable/iconapp"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:roundIcon="@drawable/iconapp"
        android:supportsRtl="true"
        android:requestLegacyExternalStorage="true"
        android:theme="@style/AppTheme">

        <activity 
			android:name="com.boat.esp.SplashActivity"
		    android:theme="@android:style/Theme.Holo.NoActionBar"
			android:noHistory="true"
			android:label="@string/app_name">
            <intent-filter>

                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>

            </intent-filter>

        </activity>

        <activity android:name="com.boat.esp.LoginActivity"/>
           
        <activity android:name="com.boat.esp.MainActivity"/>

        <service android:name="com.boat.esp.Overlay"/>

        <service android:name="com.boat.esp.MainService"/>

    </application>

</manifest>
